<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#911A1A"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonBar"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="55dp"
        android:background="#BDAFAB"
        android:text="BAR"
        android:textColor="#090909"
        android:textColorHighlight="#0B0B0B"
        android:textColorLink="#101010"
        app:layout_constraintBottom_toTopOf="@+id/buttonCafe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRestaurant" />

    <Button
        android:id="@+id/buttonCafe"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="119dp"
        android:background="#BDAFAB"
        android:text="CAFE"
        android:textColor="#090909"
        android:textColorHighlight="#0B0B0B"
        android:textColorLink="#101010"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBar" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="83dp"
        android:fontFamily="sans-serif-black"
        android:text="What are you looking?"
        android:textColorHighlight="#101010"
        android:textColorLink="#0E0E0E"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonRestaurant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonRestaurant"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="57dp"
        android:layout_marginBottom="48dp"
        android:background="#BDAFAB"
        android:text="Restaurant"
        android:textColor="#090909"
        android:textColorHighlight="#0B0B0B"
        android:textColorLink="#101010"
        app:layout_constraintBottom_toTopOf="@+id/buttonBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>